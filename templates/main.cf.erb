# Autogenerated by Puppet
# WARNING: All manual changes will be overwritten

smtpd_banner = $myhostname ESMTP $mail_name $mail_version
biff = no
append_dot_mydomain = no
readme_directory = no

# TLS parameters
smtpd_tls_cert_file = <%= scope.lookupvar('amazon_ses::smtpd_tls_cert_file') %>
smtpd_tls_key_file = <%= scope.lookupvar('amazon_ses::smtpd_tls_key_file') %>
smtpd_use_tls = yes
smtpd_tls_session_cache_database = btree:${data_directory}/smtpd_scache
smtp_tls_session_cache_database = btree:${data_directory}/smtp_scache

myhostname = <%= @hostname %>
alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases
mydestination = $myhostname, localhost.$mydomain, localhost
mynetworks = 127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128
mailbox_size_limit = 0
recipient_delimiter = +
inet_interfaces = <%= scope.lookupvar('amazon_ses::inet_interfaces') %>
myorigin = <%= scope.lookupvar('amazon_ses::domain') %>
inet_protocols = <%= scope.lookupvar('amazon_ses::inet_protocols') %>

# Amazon SES Configuration
relayhost = <%= scope.lookupvar('amazon_ses::region_url') %>
smtp_sasl_auth_enable = yes
smtp_sasl_security_options = noanonymous
smtp_sasl_tls_security_options = noanonymous
smtp_sasl_password_maps = hash:/etc/postfix/sasl_passwd
smtp_tls_security_level = encrypt
smtp_tls_note_starttls_offer = yes
smtp_tls_CAfile = <%= scope.lookupvar('amazon_ses::smtp_tls_ca_file') %>
